{
    "name": "starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "concurrently --names \"SASS, SERVER, SASS:WATCH\" -c \"bgBlue.bold,bgGreen.bold,bgMagenta.bold\" \"npm run sass\" \"npm run serve\" \"npm run sass:watch\"",
        "sass": "node-sass ./sass/main.scss ./css/style.css",
        "sass:watch": "node-sass ./sass/main.scss ./css/style.css --watch",
        "serve": "live-server"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^3.5.1",
        "node-sass": "^4.8.3"
    }
}
